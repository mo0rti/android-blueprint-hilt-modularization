<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_dashboard"
    app:startDestination="@id/homeFragment">


        <action android:id="@+id/action_to_home" app:destination="@id/homeFragment"/>
        <action android:id="@+id/action_to_bonus" app:destination="@id/bonusFragment"/>
        <action android:id="@+id/action_to_cart" app:destination="@id/cartFragment"/>
        <action android:id="@+id/action_to_favorites" app:destination="@id/favoritesFragment"/>
        <action android:id="@+id/action_to_settings" app:destination="@id/settingsFragment"/>

    <fragment
        android:id="@+id/homeFragment"
        android:name="mortitech.blueprint.account.presentation.dashboard.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/bonusFragment"
        android:name="mortitech.blueprint.account.presentation.dashboard.bonus.BonusFragment"
        android:label="BonusFragment"
        tools:layout="@layout/fragment_bonus" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="mortitech.blueprint.account.presentation.dashboard.cart.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="mortitech.blueprint.account.presentation.dashboard.favorites.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="mortitech.blueprint.account.presentation.dashboard.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />

</navigation>