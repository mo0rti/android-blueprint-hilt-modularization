<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/navSplashFragment">

    <fragment
        android:id="@+id/navLoginFragment"
        android:name="orangevelvet.androidblueprint.hilt.presentation.ui.main.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login"/>

    <fragment
        android:id="@+id/navSplashFragment"
        android:name="orangevelvet.androidblueprint.hilt.presentation.ui.main.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/navLoginFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/navSplashFragment"/>
    </fragment>

</navigation>