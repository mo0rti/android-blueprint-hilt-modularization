<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bluevelvet.blueprint.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="bluevelvet.blueprint.app.BluePrintHiltApp"
        android:allowBackup="true"
        android:icon="${app_icon}"
        android:label="@string/app_name"
        android:roundIcon="${app_icon}_round"
        android:supportsRtl="true"
        android:theme="@style/BluePrint.Theme.App" >

        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="true" >

            <nav-graph android:value="@navigation/nav_graph_app" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="bluevelvet.blueprint.hilt.app.open" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>